<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Alumni Dashboard | Association Platform</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <%- include("partials/header") %>

  <!-- Hero Section with Animation -->
  <section class="dashboard-hero">
    <div class="hero-particles">
      <div class="particle"></div>
      <div class="particle"></div>
      <div class="particle"></div>
    </div>
    <div class="hero-content">
      <h1 class="hero-title">Welcome to Your Alumni Hub</h1>
      <p class="hero-subtitle">Connect, Grow, and Thrive with Your Community</p>
    </div>
  </section>

  <!-- Main Dashboard Cards -->
  <section class="dashboard-section">
    <div class="dashboard-grid">
      <!-- Directory Card -->
      <div class="dashboard-card card-directory">
        <div class="card-header">
          <div class="card-icon icon-directory">
            <i class="fas fa-users"></i>
          </div>
          <div class="card-badge">5K+</div>
        </div>
        <div class="card-content">
          <h3>Alumni Directory</h3>
          <p>Connect with fellow alumni, search profiles, and expand your professional network</p>
          <div class="card-features">
            <span><i class="fas fa-check-circle"></i> Search Profiles</span>
            <span><i class="fas fa-check-circle"></i> Connect</span>
          </div>
        </div>
        <a href="/directory" class="card-button">
          <span>Explore Now</span>
          <i class="fas fa-arrow-right"></i>
        </a>
      </div>

      <!-- Jobs Card -->
      <div class="dashboard-card card-jobs">
        <div class="card-header">
          <div class="card-icon icon-jobs">
            <i class="fas fa-briefcase"></i>
          </div>
          <div class="card-badge">250+</div>
        </div>
        <div class="card-content">
          <h3>Job Portal</h3>
          <p>Discover exciting career opportunities and job postings from top-tier companies</p>
          <div class="card-features">
            <span><i class="fas fa-check-circle"></i> Active Listings</span>
            <span><i class="fas fa-check-circle"></i> Tailored</span>
          </div>
        </div>
        <a href="/jobs" class="card-button">
          <span>Browse Jobs</span>
          <i class="fas fa-arrow-right"></i>
        </a>
      </div>

      <!-- Events Card -->
      <div class="dashboard-card card-events">
        <div class="card-header">
          <div class="card-icon icon-events">
            <i class="fas fa-calendar-alt"></i>
          </div>
          <div class="card-badge">12</div>
        </div>
        <div class="card-content">
          <h3>Events & Reunions</h3>
          <p>Join upcoming events, reunions, and exclusive networking opportunities</p>
          <div class="card-features">
            <span><i class="fas fa-check-circle"></i> Upcoming Events</span>
            <span><i class="fas fa-check-circle"></i> Networking</span>
          </div>
        </div>
        <a href="/admin/events" class="card-button">
          <span>View Events</span>
          <i class="fas fa-arrow-right"></i>
        </a>
      </div>

      <!-- Support Card -->
      <div class="dashboard-card card-donate">
        <div class="card-header">
          <div class="card-icon icon-donate">
            <i class="fas fa-heart"></i>
          </div>
          <div class="card-badge">Help</div>
        </div>
        <div class="card-content">
          <h3>Support Us</h3>
          <p>Make a donation to support scholarships, research, and campus development</p>
          <div class="card-features">
            <span><i class="fas fa-check-circle"></i> 100% Secure</span>
            <span><i class="fas fa-check-circle"></i> Tax Deductible</span>
          </div>
        </div>
        <a href="/donate" class="card-button">
          <span>Donate Now</span>
          <i class="fas fa-arrow-right"></i>
        </a>
      </div>
    </div>
  </section>

  <!-- Stats Section -->
  <section class="stats-section">
    <h2 class="section-title">By The Numbers</h2>
    <div class="stats-grid">
      <div class="stat-box">
        <div class="stat-value counter" data-target="5000">0</div>
        <div class="stat-text">Alumni Connected</div>
      </div>
      <div class="stat-box">
        <div class="stat-value counter" data-target="250">0</div>
        <div class="stat-text">Active Job Posts</div>
      </div>
      <div class="stat-box">
        <div class="stat-value counter" data-target="98">0</div>
        <div class="stat-text">Success Rate %</div>
      </div>
      <div class="stat-box">
        <div class="stat-value counter" data-target="50">0</div>
        <div class="stat-text">Companies</div>
      </div>
    </div>
  </section>

  <!-- Call to Action Section -->
  <section class="cta-section">
    <div class="cta-content">
      <h2>Ready to Make an Impact?</h2>
      <p>Join thousands of alumni in building a stronger community</p>
      <a href="/directory" class="cta-button">Get Started</a>
    </div>
  </section>

  <%- include("partials/footer") %>

  <script>
    // Counter animation
    const counters = document.querySelectorAll('.counter');
    const speed = 200;

    const runCounter = (counter) => {
      const target = +counter.getAttribute('data-target');
      const increment = target / speed;

      const updateCount = () => {
        counter.innerText = Math.ceil(counter.innerText);
        if (counter.innerText < target) {
          counter.innerText = Math.ceil(counter.innerText + increment);
          setTimeout(updateCount, 10);
        } else {
          counter.innerText = target.toLocaleString();
        }
      };
      updateCount();
    };

    // Intersection Observer for animation trigger
    const observerOptions = {
      threshold: 0.1,
      rootMargin: '0px 0px -100px 0px'
    };

    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          const counter = entry.target.querySelector('.counter');
          if (counter && counter.innerText === '0') {
            runCounter(counter);
          }
          observer.unobserve(entry.target);
        }
      });
    }, observerOptions);

    document.querySelector('.stats-section') && observer.observe(document.querySelector('.stats-section'));
  </script>
</body>
</html>