<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Login | Alumni Portal</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <%- include("partials/header") %>

  <main class="auth-page">
    <div class="auth-card">
      <aside class="auth-visual">
        <h2>Welcome Back</h2>
        <p>Sign in to access events, jobs, the alumni directory, and exclusive community features.</p>
        <div class="brand-cta">Alumni Network â€¢ Stay connected</div>
        <div style="margin-top:18px; display:flex; gap:10px;">
          <div style="background:rgba(255,255,255,0.08);padding:10px;border-radius:8px;">Reunions</div>
          <div style="background:rgba(255,255,255,0.06);padding:10px;border-radius:8px;">Mentorship</div>
          <div style="background:rgba(255,255,255,0.06);padding:10px;border-radius:8px;">Jobs</div>
        </div>
      </aside>

      <section class="auth-form">
        <h3>Sign In</h3>
        <p class="lead">Enter your credentials to continue.</p>

        <% if (typeof error !== 'undefined' && error) { %>
          <div class="form-error"><%= error %></div>
        <% } %>

        <form method="POST" action="/login" id="loginForm">
          <div class="input-group">
            <label for="email" style="display:none">Email</label>
            <input id="email" name="email" type="email" placeholder="Email address" required>
          </div>

          <div class="input-group" style="margin-top:6px;">
            <label for="password" style="display:none">Password</label>
            <input id="password" name="password" type="password" placeholder="Password" required>
            <button type="button" class="password-toggle" aria-label="Toggle password"><i class="fas fa-eye"></i></button>
          </div>

          <div style="display:flex; align-items:center; justify-content:space-between; margin-top:8px; gap:12px;">
            <label style="font-size:14px; color:#64748b;"><input type="checkbox" name="remember" style="margin-right:8px;"> Remember me</label>
            <a href="/forgot" style="color:#4facfe; font-weight:700;">Forgot?</a>
          </div>

          <div class="auth-actions">
            <button class="btn-auth primary" type="submit">Sign in</button>
            <a class="btn-auth ghost" href="/register">Create account</a>
          </div>
        </form>

        <div style="margin-top:12px;">
          <div style="text-align:center; color:#94a3b8; font-size:13px;">Or sign in with</div>
          <div class="social-login">
            <button class="social-btn"><i class="fab fa-google"></i> Google</button>
            <button class="social-btn"><i class="fab fa-github"></i> GitHub</button>
          </div>
        </div>

        <div class="auth-foot">Not a member? <a href="/register">Register now</a></div>
      </section>
    </div>
  </main>

  <%- include("partials/footer") %>

  <script>
    (function(){
      const pwd = document.getElementById('password');
      const toggle = document.querySelector('.password-toggle');
      toggle.addEventListener('click', () => {
        const isPwd = pwd.getAttribute('type') === 'password';
        pwd.setAttribute('type', isPwd ? 'text' : 'password');
        toggle.innerHTML = isPwd ? '<i class="fas fa-eye-slash"></i>' : '<i class="fas fa-eye"></i>';
      });

      // Simple client validation UX
      const form = document.getElementById('loginForm');
      form.addEventListener('submit', (e) => {
        const email = document.getElementById('email').value.trim();
        if (!email.includes('@')) {
          e.preventDefault();
          alert('Please enter a valid email address.');
          return false;
        }
      });
    })();
  </script>
</body>
</html>